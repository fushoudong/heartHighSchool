<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:gravity="center"
        android:background="@drawable/back_other"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip">
        <ImageView
            android:id="@+id/iv_general_back"
            android:layout_width="50.0dip"
            android:layout_height="wrap_content"
            android:src="@drawable/back1" />
        <TextView
            android:textSize="25.0sp"
            android:textColor="@android:color/white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:text="@string/questionnaire_main_pager" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="6.0dip"
        android:layout_marginBottom="6.0dip">
        <TextView android:textSize="20.0sp"
            android:textColor="#ff000000"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="TG："
            android:layout_weight="2.0" />
        <EditText
            android:textSize="18.0sp"
            android:textColor="@android:color/darker_gray"
            android:textColorHint="#ff707070"
            android:id="@+id/et_tg"
            android:background="@drawable/edit_bg"
            android:layout_width="0.0dip"
            android:layout_height="35.0dip"
            android:hint="请填写您的TG"
            android:layout_weight="5.0" />
    </LinearLayout>
    <View
        android:background="@android:color/darker_gray"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip" />
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="6.0dip"
        android:layout_marginBottom="6.0dip">
        <TextView
            android:textSize="20.0sp"
            android:textColor="#ff000000"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="TC："
            android:layout_weight="2.0" />
        <EditText
            android:textSize="18.0sp"
            android:textColor="@android:color/darker_gray"
            android:textColorHint="#ff707070"
            android:id="@+id/et_tc"
            android:background="@drawable/edit_bg"
            android:layout_width="0.0dip"
            android:layout_height="35.0dip"
            android:hint="请填写您的TC"
            android:layout_weight="5.0" />
    </LinearLayout>
    <View
        android:background="@android:color/darker_gray"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip" />
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="6.0dip"
        android:layout_marginBottom="6.0dip">
        <TextView
            android:textSize="20.0sp"
            android:textColor="#ff000000"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="LDL-C："
            android:layout_weight="2.0" />
        <EditText
            android:textSize="18.0sp"
            android:textColor="@android:color/darker_gray"
            android:textColorHint="#ff707070"
            android:id="@+id/et_ldl_c"
            android:background="@drawable/edit_bg"
            android:layout_width="0.0dip"
            android:layout_height="35.0dip"
            android:hint="请填写您的LDL-C"
            android:layout_weight="5.0" />
    </LinearLayout>
    <View
        android:background="@android:color/darker_gray"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip" />
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="6.0dip"
        android:layout_marginBottom="6.0dip">
        <TextView
            android:textSize="20.0sp"
            android:textColor="#ff000000"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="身高："
            android:layout_weight="2.0" />
        <EditText
            android:textSize="18.0sp"
            android:textColor="@android:color/darker_gray"
            android:textColorHint="#ff707070"
            android:id="@+id/et_height"
            android:background="@drawable/edit_bg"
            android:layout_width="0.0dip"
            android:layout_height="35.0dip"
            android:hint="请填写您的身高"
            android:layout_weight="4.0" />
        <TextView
            android:textSize="20.0sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="CM"
            android:layout_weight="1.0" />
    </LinearLayout>
    <View
        android:background="@android:color/darker_gray"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip" />
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="6.0dip"
        android:layout_marginBottom="6.0dip">
        <TextView
            android:textSize="20.0sp"
            android:textColor="#ff000000"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="血压："
            android:layout_weight="2.0" />
        <EditText
            android:textSize="18.0sp"
            android:textColor="@android:color/darker_gray"
            android:textColorHint="#ff707070"
            android:id="@+id/et_blood_pressure"
            android:background="@drawable/edit_bg"
            android:layout_width="0.0dip"
            android:layout_height="35.0dip"
            android:hint="请填写您的血压"
            android:layout_weight="4.0" />
        <TextView
            android:textSize="16.0sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="mmHg"
            android:layout_weight="1.0" />
    </LinearLayout>
    <View
        android:background="@android:color/darker_gray"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip" />
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="6.0dip"
        android:layout_marginBottom="6.0dip">
        <TextView
            android:textSize="20.0sp"
            android:textColor="#ff000000"
            android:id="@+id/textView"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="体重："
            android:layout_weight="2.0" />
        <EditText
            android:textSize="18.0sp"
            android:textColor="@android:color/darker_gray"
            android:textColorHint="#ff707070"
            android:id="@+id/et_weight"
            android:background="@drawable/edit_bg"
            android:layout_width="0.0dip"
            android:layout_height="35.0dip"
            android:hint="请填写您的体重"
            android:layout_weight="4.0" />
        <TextView
            android:textSize="20.0sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="KG"
            android:layout_weight="1.0" />
    </LinearLayout>
    <View
        android:background="@android:color/darker_gray"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip" />
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="6.0dip"
        android:layout_marginBottom="6.0dip">
        <TextView
            android:textSize="20.0sp"
            android:textColor="#ff000000"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="腰围："
            android:layout_weight="2.0" />
        <EditText
            android:textSize="18.0sp"
            android:textColor="@android:color/darker_gray"
            android:textColorHint="#ff707070"
            android:id="@+id/et_waist"
            android:background="@drawable/edit_bg"
            android:layout_width="0.0dip"
            android:layout_height="35.0dip"
            android:hint="请填写您的腰围"
            android:layout_weight="4.0" />
        <TextView
            android:textSize="20.0sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="cm"
            android:layout_weight="1.0" />
    </LinearLayout>
    <View
        android:background="@android:color/darker_gray"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip" />
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="6.0dip"
        android:layout_marginBottom="6.0dip">
        <TextView
            android:textSize="18.0sp"
            android:textColor="#ff000000"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="是否吸烟："
            android:layout_weight="2.0" />
        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="240.0dip"
            android:layout_height="wrap_content">
            <RadioButton
                android:textColor="@android:color/holo_red_dark"
                android:id="@+id/rb_smoke_yes"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="是"
                android:layout_weight="1.0" />
            <RadioButton
                android:textColor="@android:color/holo_green_dark"
                android:id="@+id/rb_smoke_no"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="否"
                android:layout_weight="1.0" />
        </RadioGroup>
    </LinearLayout>
    <View
        android:background="@android:color/darker_gray"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip" />
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="6.0dip"
        android:layout_marginBottom="6.0dip">
        <TextView
            android:textSize="20.0sp"
            android:textColor="#ff000000"
            android:id="@+id/textView2"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="职业:"
            android:layout_weight="3.0" />
        <EditText
            android:textSize="18.0sp"
            android:textColor="@android:color/darker_gray"
            android:textColorHint="#ff707070"
            android:id="@+id/et_culture"
            android:background="@drawable/edit_bg"
            android:layout_width="0.0dip"
            android:layout_height="35.0dip"
            android:hint="请填写您的文化程度"
            android:layout_weight="7.0" />
    </LinearLayout>
    <View
        android:background="@android:color/darker_gray"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip" />
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="6.0dip"
        android:layout_marginBottom="6.0dip">
        <TextView
            android:textSize="18.0sp"
            android:textColor="#ff000000"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="文化程度："
            android:layout_weight="2.0" />
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="5.0">
            <Spinner
                android:entries="@array/work"
                android:id="@+id/sp_work"
                android:background="@android:color/darker_gray"
                android:layout_width="200.0dip"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@android:color/darker_gray"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip" />
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/ll_general_commit"
        android:background="@android:color/white"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80.0dip">
        <Button
            android:textSize="20.0sp"
            android:textColor="@android:color/holo_blue_dark"
            android:id="@+id/bt_general_commit"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交" />
    </LinearLayout>
</LinearLayout>
